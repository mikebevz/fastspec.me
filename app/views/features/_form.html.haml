= simple_form_for @feature, html: { class: 'form-horizontal' }  do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :description
    = f.input :estimate

    - if @feature.image?
      = f.input :image, :as => :file, :input_html => { :style => "display:none;" }, :hint => f.template.image_tag(@feature.image.thumb)
      = f.input :image
      = f.input :remove_image, :as => :boolean
    - else
      = f.input :image

  .form-actions
    = f.button :submit
    - if @feature.persisted?
      = link_to 'Destroy', @feature, :confirm => 'Are you sure?', :method => :delete, class: 'btn btn-danger'
