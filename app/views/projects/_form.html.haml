= simple_form_for @project, html: { class: 'form-horizontal' } do |f|
  = f.error_notification

  .form-inputs
    = f.input :name

  .form-actions
    = f.button :submit
    - if @project.persisted?
      = link_to 'Destroy', @project, :confirm => 'Are you sure?', :method => :delete, class: 'btn btn-danger'
    
